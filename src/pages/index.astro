---
import BaseLayout from '../layouts/Base.astro';

const pageTitle = 'Home'
---

<BaseLayout title= { pageTitle }>
    <div>
        <img src="logo_color.png">
        <h2> The Literary Fest of IISER Kolkata </h2>
        <h3> 25th - 27th October </h3>
        <span>
        <a class="gradient-border" href="/events">Events</a>
        <a class="gradient-border" href="mailto:lexis@iiserkol.ac.in" target="_blank">Contact Us</a>
        </span>
    </div>
</BaseLayout>

<style>
    div {
        <!-- width: 100%; -->
        height: 80%;
        text-align: center;
    }
    img {
        max-width: 80vw;
        max-height: 80vh;
    }

    span {
        display: flex;
        width: 100%;
        align-items: center;
        justify-content: center;
        gap: 1rem;
    }

    a {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 2rem;
        background: rgba(255, 255, 255, 0.05);
        font-size: 1.25rem;
        font-weight: 400;
        padding: 1rem;
        margin-top: 1rem;
        outline: 1px solid var(--accent-color);
        border-radius: 0.5rem;
        /* border: 10px solid var(--accent-color); */
    }

    @media (min-width: 850px) {
        h2 {
            margin-top: -8rem;
        }

        a {
            border-radius: 0;
            outline: none;
            font-size: 2rem;
            height: 3rem;
            font-weight: 500;
        }

        a:hover {
            color: var(--bg);
            background-color: var(--accent-color);
            box-shadow: 0 0 5px var(--accent-color), 0 0 20px var(--accent-color), 0 0 40px var(--accent-color);
            transition: 100ms ease-in-out;
        }
    }
</style>
